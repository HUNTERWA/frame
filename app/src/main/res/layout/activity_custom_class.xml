<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomClass"
    android:background="@drawable/gradi"
    android:padding="7dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradien"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="50dp"
            style="@style/Widget.Support.CoordinatorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="I am first Activity"
            android:textSize="19dp" />

        <ImageView
            android:layout_marginTop="300dp"
            android:layout_gravity="bottom|right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
            android:onClick="forward"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/frame2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/grad"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curent Activity"
            style="@style/Widget.Compat.NotificationActionContainer"/>

        <ImageView
            android:layout_marginTop="300dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:onClick="goBack"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    </LinearLayout>

</FrameLayout>