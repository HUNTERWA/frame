<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomClass"
    android:background="@drawable/gradi"
    android:padding="7dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/gradien"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am first Activity"
            style="@style/Widget.Support.CoordinatorLayout"
            android:layout_margin="5dp"
            android:textSize="19dp"/>

        <Button
            android:textColor="#ffffff"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple"
            android:text="next activity"
            android:layout_margin="3dp"
            android:onClick="nextFrame"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/frame2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/grad"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curent Activity"
            style="@style/Widget.Compat.NotificationActionContainer"/>

    </LinearLayout>

</FrameLayout>