<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@drawable/gradie"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:onClick="nextActivity"
        android:id="@+id/demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cust_but"
        android:text="demo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:alpha="0.7"
        android:background="#000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginLeft="50dp"
                android:alpha="1.0"
                app:srcCompat="@drawable/callicon" />

            <ImageView
                android:id="@+id/s_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                app:srcCompat="@android:drawable/btn_dialog" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/Base.ThemeOverlay.AppCompat.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:text="Need Some Help?"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/phoneCall"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:alpha="0.9"
                android:background="@drawable/ripple"
                android:text="Call Now 18604193333" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:alpha="0.9"
                android:text="OR"
                android:textAlignment="center" />

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:alpha="0.9"
                android:background="@drawable/ripple"
                android:text="Request a call back!!" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>